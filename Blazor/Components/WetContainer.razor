@inject IJSRuntime jsRuntime

@ChildContent

@code {
    [Parameter]
    public string WetComponentName { get; set; }

    [Parameter]
    public List<string> WetComponentNames { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    protected override async void OnAfterRender(bool firstRender) // = On Page Load
    {
        await jsRuntime.InvokeVoidAsync("cdtsBlazor.resetWetComponents", WetComponentNames is null ? WetComponentName : WetComponentNames);
    }
}
